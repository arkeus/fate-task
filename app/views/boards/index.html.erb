<% content_for :subtitle do %>Online Daily Task Scheduler<% end %>

<%= render partial: "notice" %>

<section id="promotion" class="grid">
	<div class="promotion-column col-4 align-center">
		<span class="title">Online</span>
		<%= fa_icon "cloud" %>
		<div class="blurb">Fate Task lives online, so you can access it from any computer, anywhere.</div>
	</div>
	<div class="promotion-column col-4 align-center">
		<span class="title">Easy</span>
		<%= fa_icon "check" %>
		<div class="blurb">Creating and managing tasks are as simple as possible.</div>
	</div>
	<div class="promotion-column col-4 align-center">
		<span class="title">Quick</span>
		<%= fa_icon "bolt" %>
		<div class="blurb">It's probably not quick and doesn't sync but don't tell anyone, shhhhhh.</div>
	</div>
</section>

<section id="new-board">
	<%= form_tag(create_board_path, method: :post) do %>
		<%= text_field_tag(:name, nil, placeholder: "Board Name") %>
		<%= submit_tag("Create") %>
	<% end %>
</section>
